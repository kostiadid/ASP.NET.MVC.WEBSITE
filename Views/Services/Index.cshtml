@model IEnumerable<ServiceDTO>
    @{
        string stringTitle = "Our services";
        ViewBag.Title = stringTitle;
    }

@await Html.PartialAsync("_SidebarPartial")
<div class="col-8 col-12-medium imp-medium">
    <div id="content">
        @if (Model.Any())
        {
            <section class="box article-list">
                <h2 class="icon fa-file-alt">
                    @stringTitle
                </h2>
                @foreach(ServiceDTO entity in Model)
                {
                    <article class="box excerpt">
                        <a aso-asp-area="" asp-controller="Services" asp-action="Show" asp-route-itemid="@entity.Id" class="image left image-service-list">
                           <img src="~/img/@entity.PhotoFileName" alt="" />
                        </a>
                        <div>
                            <header>
                                <h3>
                                    <a asp-area="" asp-controller="Services" asp-action="Show" asp-route-id="@entity.Id">@entity.Title
                                    </a>
                                </h3>
                                </header>
                            @if(entity.CategoryName != null)
                            {
                                <div>
                                    Category<span class="text-bold">@entity.CategoryName</span>
                                </div>
                            }
                            <p>
                               @Html.Raw(@entity.Description)
                            </p>
                        </div>
                    </article>
                }
            </section>
        }
    </div>
</div>
