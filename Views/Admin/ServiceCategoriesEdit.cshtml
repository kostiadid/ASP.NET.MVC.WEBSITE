@model ServiceCategory
@{
    string stringTitle = "Edit a service category";
    ViewBag.Title = stringTitle;
}

<div>
    <h2>
        @stringTitle
    </h2>
    <div>
        <form asp-area="" asp-controller="Admin" asp-action="ServiceCategoriesEdit" method="post">
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="DateCreated"/>
            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Title"></label>
                <input asp-for="Title"/>
                <span asp-validation-formaction="Title"></span>
            </div> 
           <input type="submit" value="Save"/>
        </form>
    </div>
</div>